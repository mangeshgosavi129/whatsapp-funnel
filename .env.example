# ================================
# Database
# ================================
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_funnel

# ================================
# AWS SQS (for WhatsApp Worker)
# ================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
SQS_QUEUE_URL=https://sqs.ap-south-1.amazonaws.com/123456789/whatsapp-messages

# ================================
# LLM Configuration (Groq)
# ================================
GROQ_API_KEY=your_groq_api_key
LLM_MODEL=llama-3.3-70b-versatile
LLM_BASE_URL=https://api.groq.com/openai/v1
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=30
LLM_MAX_INPUT_TOKENS=2000
LLM_MAX_RETRIES=2

# ================================
# Celery (for scheduled follow-ups)
# ================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ================================
# JWT Authentication
# ================================
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
